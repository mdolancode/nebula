{
  "compilerOptions": {
    "target": "ES6",            // Use modern JavaScript features
    "module": "commonjs",       // CommonJS module system for Node.js
    "strict": true,             // Enable all strict type-checking options
    "esModuleInterop": true,    // Interoperability between CommonJS and ES Modules
    "outDir": "./dist"          // Output directory for compiled JavaScript files
  },
  "include": ["src/**/*.ts"],   // Include all TypeScript files in src
  "exclude": ["node_modules"]   // Exclude node_modules to speed up builds
}